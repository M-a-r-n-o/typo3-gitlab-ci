{
    "name": "smichaelsen/typo3-gitlab-ci",
	"config": {
		"bin-dir": "bin"
	},
	"require": {
		"typo3/cms": "^7.6 || >=8.0.0 <8.6",
		"helhum/typo3-console": "4.*",
		"vlucas/phpdotenv": "2.*"
	},
	"require-dev": {
		"phpunit/phpunit": "*",
		"guzzlehttp/guzzle": "~6.0"
	},
	"autoload": {
		"psr-4": {
			"Smichaelsen\\Typo3GitlabCi\\": "src/Classes/"
		}
	},
	"extra": {
		"helhum/typo3-console": {
			"install-binary": false,
			"install-extension-dummy": false
		},
		"typo3/cms": {
			"cms-package-dir": "{$vendor-dir}/typo3/cms"
		}
	}
}
